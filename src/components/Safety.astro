---
interface Props {
  lang?: 'ua' | 'ru';
}

const { lang = 'ua' } = Astro.props;

const translations = {
  ua: {
    title: "Безпека та акуратність",
    desc1: "Ми розуміємо важливість збереження вашого майна. Перед початком робіт проводимо огляд ділянки, враховуємо розташування підземних комунікацій та працюємо максимально акуратно, щоб не пошкодити газон чи покриття.",
    desc2: "Дотримання техніки безпеки — наш пріоритет."
  },
  ru: {
    title: "Безопасность и аккуратность",
    desc1: "Мы понимаем важность сохранности вашего имущества. Перед началом работ проводим осмотр участка, учитываем расположение подземных коммуникаций и работаем максимально аккуратно, чтобы не повредить газон или покрытие.",
    desc2: "Соблюдение техники безопасности — наш приоритет."
  }
};

const t = translations[lang];
---

<section class="py-16 bg-green-50 border-y border-green-100">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center gap-8">
      <div class="md:w-1/3 flex justify-center">
        <div class="w-24 h-24 bg-green-100 rounded-full flex items-center justify-center text-green-600">
          <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        </div>
      </div>
      <div class="md:w-2/3 text-center md:text-left">
        <h2 class="text-2xl md:text-3xl font-bold mb-4 text-gray-900">{t.title}</h2>
        <p class="text-gray-700 mb-4">
          {t.desc1}
        </p>
        <p class="text-gray-700 font-medium">
          {t.desc2}
        </p>
      </div>
    </div>
  </div>
</section>
