---
interface Props {
  lang?: 'ua' | 'ru';
}

const { lang = 'ua' } = Astro.props;

const translations = {
  ua: {
    badge: "Спецтехніка в Бучанському районі",
    titleStart: "Оренда",
    titleManipulator: "маніпулятора",
    titleAnd: "та",
    titleExcavator: "екскаватора",
    desc: "Власна спецтехніка Dextor. Оперативний виїзд з Гостомеля. Працюємо для приватних і комерційних об’єктів.",
    list: [
      "Маніпулятор MAN до 6 т",
      "Екскаватор-навантажувач Bobcat B750",
      "Гостомель, Буча, Ірпінь, Ворзель, Немішаєве та Київ"
    ],
    btnCall: "Зателефонуйте нам",
    btnFleet: "Дивитись техніку",
    fleetLink: "#fleet"
  },
  ru: {
    badge: "Спецтехника в Бучанском районе",
    titleStart: "Аренда",
    titleManipulator: "манипулятора",
    titleAnd: "и",
    titleExcavator: "экскаватора",
    desc: "Собственная спецтехника Dextor. Оперативный выезд из Гостомеля. Работаем для частных и коммерческих объектов.",
    list: [
      "Манипулятор MAN до 6 т",
      "Экскаватор-погрузчик Bobcat B750",
      "Гостомель, Буча, Ирпень, Ворзель, Немешаево и Киев"
    ],
    btnCall: "Позвоните нам",
    btnFleet: "Смотреть технику",
    fleetLink: "#fleet"
  }
};

const t = translations[lang];
---

<section class="relative min-h-screen flex items-center pt-20 overflow-hidden w-full">
  <!-- Parallax Background -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900/90 via-gray-900/70 to-gray-900/30 z-10"></div>
    <div class="w-full h-full bg-[url('/images/hero-bg.jpg')] bg-cover bg-center bg-no-repeat md:bg-fixed"></div>
  </div>

  <div class="container mx-auto px-4 relative z-20 py-20">
    <div class="max-w-4xl">
      <div class="inline-block bg-primary/20 backdrop-blur-sm border border-primary/30 rounded-full px-4 py-1 mb-6 animate-fade-in-up">
        <span class="text-primary font-semibold tracking-wide uppercase text-sm">{t.badge}</span>
      </div>
      
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-8 leading-tight drop-shadow-lg animate-fade-in-up delay-100">
        {t.titleStart} <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-orange-400">{t.titleManipulator}</span> {t.titleAnd} <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-orange-400">{t.titleExcavator}</span>
      </h1>
      
      <p class="text-xl md:text-2xl text-gray-200 mb-10 max-w-2xl leading-relaxed animate-fade-in-up delay-200">
        {t.desc}
      </p>

      <ul class="space-y-4 mb-12 text-lg text-white animate-fade-in-up delay-300">
        {t.list.map((item) => (
          <li class="flex items-center group">
            <div class="w-10 h-10 rounded-full bg-primary/20 flex items-center justify-center mr-4 group-hover:bg-primary transition-colors">
              <svg class="w-6 h-6 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
            </div>
            {item}
          </li>
        ))}
      </ul>

      <div class="flex flex-col sm:flex-row gap-4 animate-fade-in-up delay-400">
        <a href="tel:+380000000000" class="bg-primary text-white px-8 py-4 rounded-full font-bold text-lg text-center hover:bg-orange-600 transition-all hover:shadow-lg hover:shadow-primary/30 transform hover:-translate-y-1">
          {t.btnCall}
        </a>
        <a href={t.fleetLink} class="bg-white/10 backdrop-blur-md text-white border border-white/30 px-8 py-4 rounded-full font-bold text-lg text-center hover:bg-white/20 transition-all hover:shadow-lg transform hover:-translate-y-1">
          {t.btnFleet}
        </a>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce text-white/50">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path></svg>
  </div>
</section>

<style>
  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
    transform: translateY(20px);
  }
  .delay-100 { animation-delay: 0.1s; }
  .delay-200 { animation-delay: 0.2s; }
  .delay-300 { animation-delay: 0.3s; }
  .delay-400 { animation-delay: 0.4s; }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
